<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <changeSet id="05" author="sa">
        <createTable tableName="change_request">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="created_by" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="approver_role" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="state" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="operation_type" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="current_object_state" type="VARCHAR(5000)">
            </column>
            <column name="new_object_state" type="VARCHAR(5000)">
            </column>
            <column name="domain_class" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="modified_at" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="modified_by" type="VARCHAR(150)">
                <constraints nullable="true"/>
            </column>
            <column name="is_relevant" type="BIT" value="true">
                <constraints nullable="false"/>
            </column>
            <column name="object_repo" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
        </createTable>


        <createTable tableName="change_request_comment">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="comment" type="varchar(5000)">
                <constraints nullable="false"/>
            </column>
            <column name="comment_by" type="VARCHAR(150)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="modified_at" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="modified_by" type="VARCHAR(150)">
                <constraints nullable="true"/>
            </column>
            <column name="is_relevant" type="BIT" value="true">
                <constraints nullable="false"/>
            </column>
        </createTable>


        <createTable tableName="change_request_comments_ref">
            <column name="comment_id" type="BIGINT">
                <constraints
                        foreignKeyName="comment_id_fk"
                        referencedTableName="change_request_comment"
                />
            </column>
            <column name="change_request_id" type="BIGINT">
                <constraints
                        foreignKeyName="change_request_id_fk"
                        referencedTableName="change_request"
                />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>