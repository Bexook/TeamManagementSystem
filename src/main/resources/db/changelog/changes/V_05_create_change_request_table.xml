<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <changeSet id="05" author="sa">
        <createTable tableName="change_request">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="approver" type="varchar(300)">
                <constraints nullable="false"/>
            </column>
            <column name="state" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="current_object_state" type="VARCHAR(1500)">
            </column>
            <column name="new_object_state" type="VARCHAR(1500)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="parent_id" type="BIGINT">
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>